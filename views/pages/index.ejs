<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <h1><%= user %></h1>

    <div class="jumbotron">
        <h1>This is great</h1>
        <p>Welcome to templating using EJS</p>
    </div>

    <h1>WEB API ENDPOINTS</h1>
    
    <div class="grid">
        <button id="list-engagement" class="btn">Get Engagements</button>
        <button id="list-plan" class="btn">Get Payment Plans</button>
        <div id="engagement-display"></div>
        <div id="plan-display"></div>
    </div>

    <div class="grid">
        <form id="invoice_form" action="POST">
            <div class="group">
                <label for="start_date">Start Date</label>
                <input type="date" id="start_date" name="start_date">
            </div>
            
            <div class="group">
                <label for="end_date">End Date</label>
                <input type="date" id="end_date" name="end_date">
            </div>

            <div class="group">
                <label for="status">Status</label>
                <select name="status" id="status">
                    <option value="">Select Status</option>
                    <option value="Draft">Draft</option>
                    <option value="Open">Open</option>
                    <option value="Finalized">Finalized</option>
                    <option value="Paid">Paid</option>
                    <option value="Closed">Closed</option>
                    <option value="Void">Void</option>
                </select>
            </div>

            <div class="group">
                <label for="customer_id">Customer</label>
                <select name="customer_id" class="customer_id_select">
                    <option value="">Select Customer</option>
                </select>
            </div>

            <div class="group">
                <label for="engagement_id">Engagements</label>
                <select name="engagement_id" class="engagement_id_select">
                    <option value="">Select Engagement</option>
                </select>
            </div>

            <button id="list-invoice" class="btn">Get Invoices</button>
        </form>
        <div id="invoice-display"></div>
    </div>

    <div class="grid">
        <form id="enroll_customer_form" method="POST">
            <h1>ENROLL CUSTOMER</h1>
            <div id="enroll-message"></div>
            <div class="group">
                <label for="first_name">First Name</label>
                <input type="text" id="first_name" name="first_name">
            </div>

            <div class="group">
                <label for="last_name">Last Name</label>
                <input type="text" id="last_name" name="last_name">
            </div>

            <div class="group">
                <label for="email_address">Email Address</label>
                <input type="email" id="email_address" name="email_address">
            </div>
            <button id="enroll_customer" class="btn">SUBMIT</button>
        </form>

        <form id="update_password_form" method="POST">
            <h1>SET CUSTOMER PASSWORD</h1>
            <div id="update-password-message"></div>
            <div class="group">
                <label for="email_address">Email Address</label>
                <input type="email" id="email_address" name="email_address">
            </div>

            <div class="group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password">
            </div>

            <div class="group">
                <label for="password_confirmation">Confirm Password</label>
                <input type="password" id="password_confirmation" name="password_confirmation">
            </div>
            <button id="update_password" class="btn">SUBMIT</button>
        </form>
    </div>

    <div class="grid">
        <form id="update_customer_form" method="POST">
            <h1>SET CUSTOMER PASSWORD</h1>
            <div id="update_customer_message"></div>
            <div class="group">
                <label for="email_address">Email Address</label>
                <input type="email" id="email_address" name="email_address">
            </div>

            <div class="group">
                <label for="first_name">First Name</label>
                <input type="text" id="first_name" name="first_name">
            </div>
            
            <div class="group">
                <label for="last_name">Last Name</label>
                <input type="text" id="last_name" name="last_name">
            </div>
            
            <div class="group">
                <label for="birthday">Birthday</label>
                <input type="date" id="birthday" name="birthday">
            </div>
            
            <div class="group">
                <label for="account_status">Account Status</label>
                <select name="account_status" id="account_status">
                    <option value="">Select Status</option>
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    <option value="Deactivated">Deactivated</option>
                </select>
            </div>
            
            <div class="group">
                <label for="id">Id</label>
                <input type="text" id="id" name="id">
            </div>
            <button id="update_customer" class="btn">SUBMIT</button>
        </form>

        <form id="add_engagement_form" method="POST">
            <h1>ADD ENGAGEMENT</h1>
            <div id="add_engagement_message"></div>
            
            <div class="group">
                <label for="customer_id">Customer</label>
                <select name="customer_id" class="customer_id_select">
                    <option value="">Select Customer</option>
                </select>
            </div>

            <div class="group">
                <label for="engagement_id">Engagements</label>
                <select name="engagement_id" class="engagement_id_select">
                    <option value="">Select Engagement</option>
                </select>
            </div>

            <button id="add_engagement" class="btn">SUBMIT</button>
        </form>
    </div>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>
  
<script src="scripts/config.js"></script>
<script src="scripts/load-data.js"></script>
<script src="scripts/add-data.js"></script>

</body>
</html>